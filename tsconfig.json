{
    "compilerOptions": {
        "allowJs": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6",
        "baseUrl": ".",
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictTemplates": true,
    },
    "exclude": [
        "node_modules",
        "src/libs",
    ]
}
